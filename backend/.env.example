# Betsan CRM Database Configuration

# Environment: development, testing, production
ENVIRONMENT=development

# Main Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/betsan_crm

# Test Database (SQLite)
TEST_DATABASE_URL=sqlite:///./test_betsan.db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-with-a-very-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# TCMB API (for currency rates)
TCMB_API_URL=https://www.tcmb.gov.tr/kurlar/today.xml

# Application Settings
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
